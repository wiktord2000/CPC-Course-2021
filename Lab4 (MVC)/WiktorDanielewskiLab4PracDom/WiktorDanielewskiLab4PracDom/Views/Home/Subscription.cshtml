
@{
    ViewData["Title"] = "Subskrypcja";
}

@model WiktorDanielewskiLab4PracDom.Models.EmailViewModel


<head>
    <!--Wyświetlanie polskich znaków-->
    <meta charset="utf-8" />
</head>

<!--Nagłówek strony-->
<h1 class="toast-header">
    Subskrypcja
</h1>


<!----Utworzenie formularza---->

@using (Html.BeginForm("Subscription", "Home", FormMethod.Post))
{
    
    <!--Treść strony-->
    <div class="toast-body">

        <!--Wstępny opis-->
        <h4>
            Jeśli chcesz otrzymywać informacje o nowych grach naszej produkcji wpisz swój e-mail w oknie poniżej.
        </h4>

        <!--Etykieta wraz z polem tekstowym-->
        <div class="mt-3">
            @Html.LabelFor(model => model.Email, "E-mail: ")
            <div>
                @Html.EditorFor(model => model.Email)
            </div>
        </div>

        <!--Przycisk-->
        <div class="mt-3">
            <input type="submit" value="Zapisz się" class="btn btn-success" />
        </div>

    </div>
        
}

<!--Stopka zawierająca ActionLink umożliwiający powrót do strony głównej-->
<div class="modal-footer">
    @Html.ActionLink("Powrót", "Index")
</div>
